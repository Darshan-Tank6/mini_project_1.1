<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Stock Market Tips</title>
    <link rel="stylesheet" type="text/css" href="/tips.css" />
    <link rel="stylesheet" type="text/css" href="/nav.css" />
    <link rel="stylesheet" href="/footer.css" />
  </head>
  <body>
    <!-- Navigation -->
    <nav class="navbar">
      <h4>InvestRight</h4>
      <ul class="nav-list">
        <% if(user.role === 'admin') { %>
        <li><a href="/admin/">All profiles</a></li>
        <% } %>
        <!-- <li><a href="/auth/home">Dashboard</a></li> -->
        <li><a href="/tips">Tips</a></li>
        <li><a href="/reports">Report Fraud</a></li>
        <li><a href="/auth/profile-page">Profile</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </nav>
    <div class="container">
      <center>
        <h1>Stock Market Tips</h1>
      </center>
      <!-- <% if(user && user.role != "user"){%> -->
      <div id="admin-form">
        <form id="formbox" action="/tips/add" method="POST">
          <input
            name="title"
            type="text"
            id="tip-title"
            placeholder="Tip Title"
            required
          />
          <textarea
            name="content"
            id="tip-content"
            placeholder="Write your tip here..."
            required
          ></textarea>
          <button type="submit">Submit Tip</button>
        </form>
      </div>
      <!-- <% }%> -->

      <!-- <a href="/auth/home">Home</a>
    <a href="/auth/logout">Log out</a> -->

      <h2>All Tips</h2>
      <div id="tips-container">
        <% if (tips.length > 0) { %> <% tips.forEach(tip => { %>
        <div class="details-card">
          <h3><%= tip.title %></h3>
          <p><%= tip.content %></p>
          <p><strong>Posted by:</strong> <%= tip.postedBy.name %></p>
          <p>
            <strong>Votes:</strong> üëç <%= tip.upVotes.length %> | üëé <%=
            tip.downVotes.length %>
          </p>
          <p>
            <small
              >Posted on: <%= new Date(tip.createdOn).toLocaleString() %></small
            >
          </p>
          <form action="/tips/<%= tip._id %>/upvote" method="POST">
            <button type="submit" class="btn upvote">üëç Upvote</button>
          </form>
          <form action="/tips/<%= tip._id %>/downvote" method="POST">
            <button type="submit" class="btn downvote">üëé Downvote</button>
          </form>
          <% if (user && user.role != "user") {%>
          <form
            action="/tips/<%= tip._id %>/delete"
            method="POST"
            onsubmit="return confirm('Are you sure?');"
          >
            <button class="delete" type="submit">‚ùå Delete</button>
          </form>
          <% } %>
        </div>
        <% }); %> <% } else { %>
        <p>No tips available.</p>
        <% } %>
      </div>
    </div>
    <footer class="footer">
      <div class="footer-container">
        <div class="footer-left">
          <h3>InvestRight</h3>
          <p>&copy; 2025 InvestRight. All rights reserved.</p>
        </div>
        <div class="footer-right">
          <a href="/about.html">About</a>
          <a href="/contact.html">Contact</a>
        </div>
      </div>
    </footer>
  </body>
</html>
