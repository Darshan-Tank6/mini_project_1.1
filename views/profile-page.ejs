<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile - MarketTips</title>
    <link rel="stylesheet" href="/profile-page.css" />
    <script defer src="/profile-page-script.js"></script>
    <link rel="stylesheet" href="/footer.css" />
    <link rel="stylesheet" href="/modal.css" />
    <link rel="stylesheet" href="/nav.css" />
  </head>
  <body>
    <nav class="navbar">
      <h4>InvestRight</h4>
      <ul class="nav-list">
        <% if(user.role === 'admin') { %>
        <li><a href="/admin/">All profiles</a></li>
        <% } %>
        <!-- <li><a href="/auth/home">Dashboard</a></li> -->
        <li><a href="/tips">Tips</a></li>
        <li><a href="/reports">Report Fraud</a></li>
        <li><a href="/auth/profile-page">Profile</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </nav>

    <main class="profile-container">
      <div class="tab-navigation">
        <button class="tab-button active" data-tab="profile">üë§ Profile</button>
        <button class="tab-button" data-tab="reports">üìÑ Reports</button>
        <button class="tab-button" data-tab="tips">üí° Tips</button>
      </div>

      <div class="tab-content active" id="profile">
        <div class="card">
          <h2>User Profile</h2>
          <p><strong>Name:</strong> <%= user.name %></p>
          <p><strong>Email:</strong> <%= user.email %></p>
          <p><strong>Role:</strong> <%= user.role %></p>
        </div>

        <div class="card actions">
          <% if(user.role != "advisor") { %>
          <button class="btn" data-open="verify-user-details-modal">
            Become a Advisor
          </button>
          <%}%>
          <button class="btn" data-open="reset-password-modal">
            üîë Reset Password
          </button>
          <button class="btn" data-open="reset-pin-modal">üîí Reset PIN</button>
          <button class="btn danger" data-open="delete-profile-modal">
            üóëÔ∏è Delete Profile
          </button>
          <!-- <button class="btn" onclick="/auth/logout">Log out</button> -->
          <button class="btn" onclick="window.location.href='/auth/logout'">
            Logout
          </button>
        </div>
      </div>

      <div class="tab-content" id="reports">
        <div class="card">
          <h2>Reports Submitted (<%= submittedCount %>)</h2>
          <% if (submittedReports.length > 0) { %>
          <ul class="list">
            <% submittedReports.forEach(report => { %>
            <li><strong><%= report.title %></strong> - <%= report.status %></li>
            <% }); %>
          </ul>
          <% } else { %>
          <p>No reports submitted.</p>
          <% } %>
        </div>
      </div>

      <div class="tab-content" id="tips">
        <div class="card">
          <h2>Tips Submitted (<%= submittedTipCount %>)</h2>
          <% if (submittedTips.length > 0) { %>
          <ul class="list">
            <% submittedTips.forEach(tip => { %>
            <li><strong><%= tip.title %></strong> - <%= tip.content %></li>
            <% }); %>
          </ul>
          <% } else { %>
          <p>No tips submitted.</p>
          <% } %>
        </div>
      </div>
    </main>

    <!-- Modals -->
    <div id="reset-password-modal" class="modal hidden">
      <div class="modal-content">
        <center>
          <h3>Reset Password</h3>
        </center>
        <form action="/auth/reset-password" method="post">
          <div class="input-group">
            <label for="currentPassword">Current Password</label>
            <input
              type="password"
              id="currentPassword"
              name="currentPassword"
              placeholder="Enter Current Password"
              required
            />
          </div>
          <div class="input-group">
            <label for="newPassword">New Password</label>
            <input
              type="password"
              id="newPassword"
              name="newPassword"
              placeholder="Enter New Password"
              required
            />
          </div>
          <button type="submit">Change Password</button>
        </form>
        <span class="close-modal" data-close="reset-password-modal">‚úñ</span>
      </div>
    </div>

    <!-- Reset PIN Modal -->
    <div id="reset-pin-modal" class="modal hidden">
      <div class="modal-content">
        <center>
          <h3>Reset PIN</h3>
        </center>
        <form action="/auth/reset-pin" method="post">
          <div class="input-group">
            <label for="currentPin">Current PIN</label>
            <input
              type="password"
              id="currentPin"
              name="currentPin"
              placeholder="Enter Current PIN"
              required
            />
          </div>
          <div class="input-group">
            <label for="newPin">New PIN</label>
            <input
              type="password"
              id="newPin"
              name="newPin"
              placeholder="Enter New PIN"
              required
            />
          </div>
          <button type="submit">Change PIN</button>
        </form>
        <span class="close-modal" data-close="reset-pin-modal">‚úñ</span>
      </div>
    </div>

    <!-- Delete Profile Modal -->
    <div id="delete-profile-modal" class="modal hidden">
      <div class="modal-content">
        <center>
          <h3>Delete Profile</h3>
        </center>
        <form action="/auth/delete/self/<%= user._id %>" method="post">
          <div class="input-group">
            <label for="deletePassword">Password</label>
            <input
              type="password"
              id="deletePassword"
              name="password"
              placeholder="Enter Password"
              required
            />
          </div>
          <button type="submit" onclick="return confirm('Are you sure?')">
            Delete
          </button>
        </form>
        <span class="close-modal" data-close="delete-profile-modal">‚úñ</span>
      </div>
    </div>

    <!-- Verify User Details Modal -->
    <div id="verify-user-details-modal" class="modal hidden">
      <div class="modal-content">
        <center>
          <h3>Become an Advisor</h3>
        </center>
        <form action="/auth/verify-user-details" method="post">
          <div class="input-group">
            <label for="name">Name/Trade Name</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Enter Name/Trade Name"
              required
            />
          </div>
          <div class="input-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="Enter Email"
              required
            />
          </div>
          <div class="input-group">
            <label for="regNo">Registration Number</label>
            <input
              type="text"
              id="regNo"
              name="regNo"
              placeholder="Enter Registration Number"
            />
          </div>
          <div class="input-group">
            <label for="contactPerson">Contact Person</label>
            <input
              type="text"
              id="contactPerson"
              name="contactPerson"
              placeholder="Enter Contact Person"
            />
          </div>
          <div class="input-group">
            <label for="location">Location</label>
            <input
              type="text"
              id="location"
              name="location"
              placeholder="Enter Location"
            />
          </div>
          <button type="submit">Verify Advisor</button>
        </form>
        <span class="close-modal" data-close="verify-user-details-modal"
          >‚úñ</span
        >
      </div>
    </div>
    <footer class="footer">
      <div class="footer-container">
        <div class="footer-left">
          <h3>InvestRight</h3>
          <p>&copy; 2025 InvestRight. All rights reserved.</p>
        </div>
        <div class="footer-right">
          <a href="/about.html">About</a>
          <a href="/contact.html">Contact</a>
        </div>
    </footer>
  </body>
</html>
